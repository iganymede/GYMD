[Script]
XMind = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/nzw9314/QuantumultX/master/Script/XMind.js,script-update-interval=0,type=http-response,pattern=https://www.xmind.cn/_res/devices
AppleBuy = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/iganymede/GYMD/master/buyit.js,script-update-interval=0,type=http-response,pattern=^https://buy.itunes.apple.com/verifyReceipt$
Vsco = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/NobyDa/Script/master/QuantumultX/File/vsco.js,type=http-response,pattern=^https?://vsco.co/api/subscriptions/2.1/user-subscriptions/
Draft = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/iganymede/GYMD/master/getdr.js,script-update-interval=0,type=http-response,pattern=https://backend.getdrafts.com/api/.*/verification
Adguard = script-path=https://raw.githubusercontent.com/iganymede/GYMD/master/adg.js,script-update-interval=0,type=http-request,pattern=https://mobile-api.adguard.com/api/1.0/status.html
JD_DailyBonus = type=cron,cronexp=3 0 * * *,script-path=https://raw.githubusercontent.com/NobyDa/Script/master/JD-DailyBonus/JD_DailyBonus.js,script-update-interval=0
Get-Cookie-JD = max-size=0,script-path=https://raw.githubusercontent.com/NobyDa/Script/master/JD-DailyBonus/JD_DailyBonus.js,type=http-request,pattern=https://api.m.jd.com/client.action.*functionId=signBean
WangYi.js = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/NobyDa/Script/master/QuantumultX/File/wnyd.js,type=http-response,pattern=^https?://p.du.163.com/gain/readtime/info.json
# weibo
wb_launch = requires-body=1,script-path=https://raw.githubusercontent.com/yichahucha/surge/master/wb_launch.js,type=http-response,pattern=^https?://(sdk|wb)app.uve.weibo.com(/interface/sdk/sdkad.php|/wbapplua/wbpullad.lua)
wb_ad = requires-body=1,script-path=https://raw.githubusercontent.com/yichahucha/surge/master/wb_ad.js,type=http-response,pattern=^https?://m?api.weibo.c(n|om)/2/(statuses/(unread|extend|positives/get|(friends|video)(/|_)(mix)?timeline)|stories/(video_stream|home_list)|(groups|fangle)/timeline|profile/statuses|comments/build_comments|photo/recommend_list|service/picfeed|searchall|cardlist|page|!/photos/pic_recommend_status)

